{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/app.js",
    "start:dev": "DEBUG=app nodemon ./server/app.js --exec babel-node",
    "build": "npm run clean && babel ./server -d ./dist",
    "migrate": "sequelize db:migrate",
    "migrate:undo:all": "sequelize db:migrate:undo:all",
    "migrate:undo": "sequelize db:migrate:undo",
    "refreshdb": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "heroku-postbuild": "npm run build",
    "clean": "rm -rf dist",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "npm run refreshdb && nyc --reporter=html --reporter=text --require @babel/register --env=test mocha --timeout 10000 ./server/tests/*.js --exit"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "@babel/runtime": "^7.4.5",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.4",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.8.6",
    "sequelize-cli": "^5.4.0",
    "sqlite3": "^4.0.8",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.5"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.4.4",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2"
  },
  "nyc": {
    "all": true,
    "include": [
      "server/**"
    ],
    "exclude": [
      "**/tests/**",
      "server/migrations"
    ]
  }
}
